@model GbgMerch.WebUI.ViewModels.ProductViewModel

<h2 class="mb-4">Create New Product</h2>

<form asp-action="Create" method="post" class="row g-3">

    <!-- Produktnamn -->
    <div class="col-md-6">
        <label asp-for="Name" class="form-label">Product Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Pris -->
    <div class="col-md-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <!-- Valuta -->
    <div class="col-md-3">
        <label asp-for="Currency" class="form-label">Currency</label>
        <input asp-for="Currency" class="form-control" />
        <span asp-validation-for="Currency" class="text-danger"></span>
    </div>

    <!-- Beskrivning -->
    <div class="col-12">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Lagerantal -->
    <div class="col-md-6">
        <label asp-for="Stock" class="form-label">Stock Quantity</label>
        <input asp-for="Stock" type="number" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <!-- Bild -->
    <div class="col-md-6">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Knapp -->
    <div class="col-12 d-flex gap-2">
        <button type="submit" class="btn btn-success">➕ Create Product</button>
        <a href="/Admin/Products" class="btn btn-secondary">← Back to List</a>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
