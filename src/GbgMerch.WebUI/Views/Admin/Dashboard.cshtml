@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="display-4">Welcome to the Admin Dashboard</h1>
<p class="lead">Manage your products, orders, and more from this administrative area.</p>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card bg-primary text-white shadow rounded-3">
            <div class="card-body">
                <h5 class="card-title">Products</h5>
                <p class="card-text">Manage your product catalog</p>
                <a href="/Admin/Products" class="btn btn-light text-primary">View Products</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-success text-white shadow rounded-3">
            <div class="card-body">
                <h5 class="card-title">Orders</h5>
                <p class="card-text">Manage customer orders</p>
                <a href="/Admin/Orders" class="btn btn-light text-success">View Orders</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-warning text-dark shadow rounded-3">
            <div class="card-body">
                <h5 class="card-title">Settings</h5>
                <p class="card-text">Configure store settings</p>
                <a href="/Admin/Settings" class="btn btn-dark">Manage Settings</a>
            </div>
        </div>
    </div>
</div>
