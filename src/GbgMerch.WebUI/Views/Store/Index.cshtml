@model List<GbgMerch.Domain.Entities.Product> 

@{
    ViewData["Title"] = "Store";
}

<!-- Välkomsttext / intro -->
<div class="text-center mb-5">
    <h1 class="display-4">Welcome to GbgMerch</h1>
    <p class="lead">Discover our high-quality merchandise for developers and tech enthusiasts.</p>
</div>

<!-- Rubrik till produktlistan -->
<h2 class="text-3xl font-bold mb-6">Featured Products</h2>

<!-- Produktkort: visas som grid i olika skärmstorlekar -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var product in Model)
    {
        <div class="border rounded-lg shadow p-4">
            <!-- Produktbild -->
            <img src="@product.ImageUrl" alt="@product.Name" class="w-full h-40 object-cover mb-2" />

            <!-- Namn och beskrivning -->
            <h3 class="text-xl font-semibold">@product.Name</h3>
            <p>@product.Description</p>

            <!-- Pris och lagerstatus -->
            <p class="font-bold mt-2">SEK @product.Price</p>
            <p class="text-green-600">In Stock: @product.StockQuantity</p>
        </div>
    }
</div>
