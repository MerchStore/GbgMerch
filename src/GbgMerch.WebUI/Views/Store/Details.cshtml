@model GbgMerch.Domain.Entities.Product

@{
    ViewData["Title"] = "Produktdetaljer";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" />
            </div>
            <div class="col-md-6">
                <h2>@Model.Name</h2>
                <p class="mt-3">@Model.Description</p>
                <p><strong>Pris:</strong> @Model.Price</p>
                <p><strong>Lagerstatus:</strong> @Model.StockQuantity</p>
            <div class="d-flex gap-2 mt-4">
                <a class="btn btn-primary px-4 py-2 d-flex align-items-center gap-2 rounded-pill" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Back to Products
                </a>


                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-flex align-items-center gap-2 add-to-cart-form">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="number" name="quantity" value="1" min="1" class="form-control rounded-pill" style="width: 80px;" />
                    <button type="submit" class="btn btn-primary px-4 py-2 d-flex align-items-center gap-2 rounded-pill">
                        <i class="bi bi-cart"></i> Add to Cart
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.getElementById('add-to-cart-form')?.addEventListener('submit', async function (event) {
            event.preventDefault();

            const formData = new FormData(this);

            const response = await fetch(this.action, {
                method: 'POST',
                body: formData
            });

            if (response.ok) {
                alert('Product has been added to the cart!');

                const countResponse = await fetch('/Cart/GetCartCount');
                if (countResponse.ok) {
                    const count = await countResponse.json();
                    const cartCountElement = document.getElementById('cart-count');
                    if (cartCountElement) {
                        cartCountElement.textContent = count;
                        cartCountElement.style.display = count > 0 ? 'inline-block' : 'none';
                    }
                }
            } else {
                alert('Failed to add product.');
            }
        });
    </script>
}
